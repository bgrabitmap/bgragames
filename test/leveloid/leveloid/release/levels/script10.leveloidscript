Program leveloid;

// Al tocar un bloque
function OnHitWall(tile: String; id: Integer): THitWall;
begin
  case tile of
    // vacío
    '-1': Result := hwEmpty;
    // reinicia al jugador
    '0', '1', '2', '3':
    begin
      AccX := 0;
      AccY := 0;
      Result := hwResetPlayer;
    end;
    // sólido
    '4': Result := hwHitSolid;
	'5':
	begin
	  ChangeData(id, '-1');
	  Result := hwHitSolid;
	end;
    // avanza al siguiente nivel
    '6': Result := hwGoNextLevel;
  end;
  
  // máxima velocidad horizontal
  if (AccX > 5) then
    AccX := 5
  else if (AccX < -5) then
    AccX := -5;
	
  // máxima velocidad vertical
  if (AccY > 5) then
    AccY := 5
  else if (AccY < -5) then
    AccY := -5;
end;

// Sonido al reiniciar
function OnPlayRestartSound: string;
begin
  Result := 'level_restart.wav';
end;

// Música de fondo
function OnPlayBackgroundMusic: string;
begin
  Result := 'level_music.ogg';
end;

begin
  // Bloque del personaje
  PlayerTile := 7;
  // Posición Inicial
  PosX := 16;
  PosY := 16;
  {$I player_bouncing.leveloidscript}
end.